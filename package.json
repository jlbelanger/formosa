		"start": "microbundle-crl watch --no-compress --format modern,cjs --css-modules false --jsxFragment React.Fragment",
		"test": "node_modules/.bin/jest --watch"
	},
	"peerDependencies": {
		"react": "^17.0.1"
	},
	"dependencies": {
		"get-value": "^3.0.1",
		"prop-types": "^15.7.2",
		"react-promise-tracker": "^2.1.0",
		"set-value": "^3.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.11.0",
		"@babel/eslint-parser": "^7.13.8",
		"@babel/preset-env": "^7.13.10",
		"@svgr/webpack": "^5.5.0",
		"dotenv": "^8.2.0",
		"eslint": "^7.21.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsdoc": "^30.7.9",
