		"microbundle-crl": "^0.13.10",
		"node-sass": "^4.14.1",
		"react-scripts": "^4.0.3",
		"sass-lint": "^1.13.1",
		"stylelint": "^13.8.0",
		"stylelint-config-standard-scss": "^1.1.0",
		"stylelint-order": "^4.1.0",
		"stylelint-scss": "^3.18.0"
	},
	"files": [
		"dist"
	]
